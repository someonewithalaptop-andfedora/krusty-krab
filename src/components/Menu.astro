---
// Menu section component
import MenuCard from './MenuCard.astro';

const menuItems = [
  {
    title: 'Cangreburguer',
    description: 'La receta secreta que Plankton nunca obtendrá.',
    price: '1.25',
    image: 'https://images.unsplash.com/photo-1568901346375-23c9450c58cd?auto=format&fit=crop&w=600'
  },
  {
    title: 'Papas Galácticas',
    description: 'Cortadas a mano por un parrillero profesional.',
    price: '0.50',
    image: 'https://images.unsplash.com/photo-1573821663912-5699037ea012?auto=format&fit=crop&w=600'
  },
  {
    title: 'Batido Coral',
    description: 'Extremadamente refrescante y algo radioactivo.',
    price: '1.00',
    image: 'https://images.unsplash.com/photo-1544148103-0773bf10d330?auto=format&fit=crop&w=600'
  }
];
---

<section id="menu" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-20 reveal">
      <h2 class="krusty-title text-5xl md:text-7xl text-blue-900 mb-4">Nuestro Menú</h2>
      <div class="h-1.5 w-32 bg-red-500 mx-auto rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      {menuItems.map((item) => (
        <MenuCard 
          title={item.title}
          description={item.description}
          price={item.price}
          image={item.image}
        />
      ))}
    </div>
  </div>
</section>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('active');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
</script>
